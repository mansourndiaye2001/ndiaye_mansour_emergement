<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.util.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleur.CoursControlleur">

    <!-- En-tête avec titre et actions -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #3949ab; -fx-padding: 15 20;">
                <Label text="Gestion des Cours" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Administration" style="-fx-font-size: 14; -fx-text-fill: white;" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #303f9f; -fx-padding: 10 20;">
                <Button fx:id="btnAdd" onAction="#AddCours"
                        style="-fx-background-color: #4CAF50; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                        text="Ajouter" />
                <Button fx:id="btnUpdate"
                        style="-fx-background-color: #FF9800; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                        text="Modifier" />
                <Button fx:id="btnDelete" onAction="#DeleteCours"
                        style="-fx-background-color: #F44336; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                        text="Supprimer" />
            </HBox>
        </VBox>
    </top>

    <!-- Centre : formulaire et tableau -->
    <center>
        <HBox style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
            <!-- Formulaire à gauche -->
            <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3); -fx-padding: 20; -fx-min-width: 350;">
                <Label text="Informations du cours" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #3949ab; -fx-padding: 0 0 10 0;" />

                <TextField fx:id="txtNom" promptText="Nom du cours"
                           style="-fx-pref-width: 300; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 8;" />

                <TextArea fx:id="txtDescription" promptText="Description du cours"
                          style="-fx-pref-width: 300; -fx-pref-height: 100; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 8;" />

                <!-- Heure de début -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Heure de début" />
                    <Spinner fx:id="spinnerHeureDebut" style="-fx-pref-width: 80;">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="20" initialValue="8" />
                        </valueFactory>
                    </Spinner>
                    <Label text=":" />
                    <Spinner fx:id="spinnerMinuteDebut" style="-fx-pref-width: 80;">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0" />
                        </valueFactory>
                    </Spinner>
                </HBox>

                <!-- Heure de fin -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Heure de fin" />
                    <Spinner fx:id="spinnerHeureFin" style="-fx-pref-width: 80;">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="20" initialValue="10" />
                        </valueFactory>
                    </Spinner>
                    <Label text=":" />
                    <Spinner fx:id="spinnerMinuteFin" style="-fx-pref-width: 80;">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="30" />
                        </valueFactory>
                    </Spinner>
                </HBox>

                <!-- Jour -->
                <ComboBox fx:id="comboJour" promptText="Jour du cours"
                          style="-fx-pref-width: 300; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 8;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="LUNDI" />
                            <String fx:value="MARDI" />
                            <String fx:value="MERCREDI" />
                            <String fx:value="JEUDI" />
                            <String fx:value="VENDREDI" />
                            <String fx:value="SAMEDI" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Salle -->
                <ComboBox fx:id="comboSalle" promptText="Choisir une salle"
                          style="-fx-pref-width: 300; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 8;" />

                <!-- Professeur -->
                <ComboBox fx:id="comboProfesseur" promptText="Choisir un professeur"
                          style="-fx-pref-width: 300; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 8;" />
            </VBox>

            <!-- Tableau des cours avec ScrollPane -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-padding: 0 0 0 20;">
                <Label text="Liste des cours programmés" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #3949ab;" />

                <!-- Barre de recherche -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField promptText="Rechercher un cours..."
                               style="-fx-pref-width: 300; -fx-background-radius: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 20; -fx-padding: 8;" />
                </HBox>

                <!-- TableView avec ScrollPane -->
                <ScrollPane style="-fx-background-color: transparent; -fx-background-radius: 4; -fx-padding: 10;">
                    <TableView fx:id="tableCours" onMouseClicked="#taclikP" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3); -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-background-radius: 4;">
                        <placeholder>
                            <Label text="Aucun cours disponible" style="-fx-text-fill: #757575;" />
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="colID" prefWidth="20.0" text="ID" />
                            <TableColumn fx:id="colNom" prefWidth="100.0" text="Nom" />
                            <TableColumn fx:id="colDescription" prefWidth="200.0" text="Description" />
                            <TableColumn fx:id="colHeureDebut" prefWidth="100.0" text="Heure Début" />
                            <TableColumn fx:id="colHeureFin" prefWidth="100.0" text="Heure Fin" />
                            <TableColumn fx:id="colJour" prefWidth="100.0" text="Jour" />
                            <TableColumn fx:id="colSalle" prefWidth="150.0" text="Salle" />
                            <TableColumn fx:id="colProfesseur" prefWidth="200.0" text="Professeur" />
                        </columns>
                    </TableView>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #3949ab; -fx-padding: 10 20;">
            <Label text="© 2025 Système de Gestion Académique" style="-fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnQuitter"
                    style="-fx-background-color: #9E9E9E; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                    text="Quitter" />
        </HBox>
    </bottom>
</BorderPane>
