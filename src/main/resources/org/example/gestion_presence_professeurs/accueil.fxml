<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ProgressIndicator?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleur.DashbordController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #3949ab; -fx-padding: 15px;">
            <Label fx:id="message" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Dashboard" />

            <Button fx:id="btnAccueil" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Accueil" />
            <Button fx:id="btnUtilisateurs" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Utilisateurs" />
            <Button fx:id="btnSalle" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Salles " />
            <Button fx:id="btnCours" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Cours" />
            <Button fx:id="btnPresences" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Présences" />
            <Button fx:id="btnRapports" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Rapports" />
            <Button fx:id="btnNotifications" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Notifications" />
            <Button fx:id="btnDeconnexion" style="-fx-background-color: #303f9f; -fx-text-fill: white;" text="Deconnexion" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 15px; -fx-background-color: #f5f5f5;">
            <HBox alignment="CENTER">
                <ProgressIndicator fx:id="progressCircle" progress="0.0" prefWidth="80" prefHeight="80" />
            </HBox>
        </VBox>
    </center>

    <!-- Right Side -->
    <right>
        <VBox spacing="10" style="-fx-background-color: #e8eaf6; -fx-padding: 15px;">
            <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #3949ab;" text="Actions rapides" />
            <Button style="-fx-background-color: #3949ab; -fx-text-fill: white;" text="Voir détails" />
        </VBox>
    </right>

</BorderPane>
