<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleur.ProfController">

    <!-- En-tête -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #3949ab; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <Button fx:id="btnAdd" onAction="#Emerger"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15; -fx-font-weight: bold; -fx-cursor: hand;"
                    text="Emerger" />
            <Label fx:id="message"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"
                   text="La Liste des cours du jour" />
            <HBox HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"
                   text="Système de Gestion des Présences" />
        </HBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-padding: 0; -fx-background-insets: 0;">
            <VBox alignment="TOP_CENTER" spacing="25"
                  style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3); -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 20;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Première TableView: Liste des cours -->
                <VBox spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3949ab; -fx-padding: 5 0; -fx-border-color: transparent transparent #3949ab transparent; -fx-border-width: 0 0 1 0;"
                           text="La Liste de vos cours du jour" />
                    <TableView fx:id="tableCours"
                               style="-fx-background-color: transparent; -fx-border-color: #3949ab; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 0;">
                        <columns>
                            <TableColumn fx:id="colID" prefWidth="80" text="ID" />
                            <TableColumn fx:id="colNom" prefWidth="150" text="Nom" />
                            <TableColumn fx:id="colDescription" prefWidth="350" text="Description" />
                            <TableColumn fx:id="colHeureDebut" prefWidth="150" text="Heure Début" />
                            <TableColumn fx:id="colHeureFin" prefWidth="100" text="Heure Fin" />
                            <TableColumn fx:id="colSalle" prefWidth="200" text="Salle" />
                            <TableColumn fx:id="colProfesseur" prefWidth="250" text="Professeur" />
                        </columns>
                        <placeholder>
                            <Label text="Aucun cours disponible aujourd'hui" />
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- Deuxième TableView: Liste des émargements -->
                <VBox spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3949ab; -fx-padding: 5 0; -fx-border-color: transparent transparent #3949ab transparent; -fx-border-width: 0 0 1 0;"
                           text="Émargement" />
                    <TableView fx:id="tableEmergement"
                               style="-fx-background-color: transparent; -fx-border-color: #3949ab; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 0;">
                        <columns>
                            <TableColumn fx:id="colID_r" prefWidth="100" text="ID" />
                            <TableColumn fx:id="colStatut" prefWidth="200" text="Statut" />
                            <TableColumn fx:id="colDate_r" prefWidth="300" text="Date" />
                            <TableColumn fx:id="colCours" prefWidth="450" text="Cours" />
                        </columns>
                        <placeholder>
                            <Label text="Aucun émargement enregistré" />
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15"
              style="-fx-background-color: #3949ab; -fx-padding: 10; -fx-border-width: 1 0 0 0; -fx-border-color: derive(#3949ab, -10%);">
            <Label style="-fx-text-fill: white;" text="© 2025 Système de Gestion des Présences" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnQuitter" onAction="#deconnexion"
                    style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15; -fx-font-weight: bold; -fx-cursor: hand;"
                    text="Déconnexion" />
        </HBox>
    </bottom>

    <!-- Styles pour les tableaux qui ne peuvent pas être définis directement sur les éléments -->
    <styleClass>
        .table-view .column-header {
        -fx-background-color: #3949ab;
        -fx-text-fill: white;
        -fx-font-weight: bold;
        -fx-padding: 10 5;
        }

        .table-view .column-header .label {
        -fx-text-fill: white;
        -fx-alignment: center-left;
        }

        .table-view .table-row-cell {
        -fx-background-color: white;
        -fx-border-color: transparent #f0f0f0 #f0f0f0 transparent;
        -fx-border-width: 0 0 1 0;
        }

        .table-view .table-row-cell:odd {
        -fx-background-color: #f8f8f8;
        }

        .table-view .table-row-cell:selected {
        -fx-background-color: #d1d9ff;
        -fx-text-fill: #212121;
        }

        .button:hover {
        -fx-opacity: 0.9;
        -fx-scale-x: 1.03;
        -fx-scale-y: 1.03;
        }
    </styleClass>
</BorderPane>